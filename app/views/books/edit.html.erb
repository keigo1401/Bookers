<h1>Editing Book</h1>
<div class="field">
   <%= form_with model:@book, local: true do |f| %>
     <label for = "book_title">Title</label><br>
     <%= f.text_field :title %><br>
     <label for = "book_body">Body</label><br>
     <%= f.text_area :body %><br>
     <%= f.submit 'Update Book' %>
   <% end %>
   
   <%= link_to "Show", book_path(@book) %>
   | 
   <%= link_to "Back", books_path %>
</div>
